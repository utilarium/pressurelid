{
  "name": "@utilarium/pressurelid",
  "version": "1.0.4",
  "description": "Safe regex handling with ReDoS protection - keeps dangerous patterns under pressure.",
  "type": "module",
  "main": "./dist/pressurelid.cjs",
  "module": "./dist/pressurelid.js",
  "types": "./dist/pressurelid.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utilarium/pressurelid.git"
  },
  "exports": {
    ".": {
      "types": "./dist/pressurelid.d.ts",
      "import": "./dist/pressurelid.js",
      "require": "./dist/pressurelid.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build",
    "dev": "vite build --watch",
    "watch": "vite build --watch",
    "test": "vitest run --coverage",
    "precommit": "npm run lint && npm run test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "docs:dev": "cd docs && cp ../README.md public/ && npm install && npm run dev",
    "docs:build": "cd docs && cp ../README.md public/ && npm install && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "docs:test": "cd docs && npm install && npm run test",
    "docs:coverage": "cd docs && npm install && npm run coverage"
  },
  "keywords": [
    "regex",
    "redos",
    "security",
    "safe-regex",
    "validation",
    "denial-of-service",
    "pattern-matching"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "homepage": "https://utilarium.github.io/pressurelid/",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@swc/core": "^1.12.11",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.0.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.16"
  }
}
